<Project Sdk="Microsoft.NET.Sdk.Razor">
	<PropertyGroup>
		<TargetFramework>net7.0</TargetFramework>
		<Nullable>enable</Nullable>
		<ImplicitUsings>enable</ImplicitUsings>
		<RootNamespace>FSH.BlazorChartjs</RootNamespace>
		<AssemblyName>FSH.BlazorChartjs</AssemblyName>
		<Title>ChartJs component for Blazor</Title>
		<Description>ChartJs component for Blazor. Compatible with client-side and server-side Blazor applications.</Description>
		<Copyright>© Ngô Quốc Toản - ngoquoctoan.dev</Copyright>
		<PackageProjectUrl>https://github.com/ngoquoctoandev/BlazorChartjs</PackageProjectUrl>
		<PackageIcon>tdev_100.png</PackageIcon>
		<RepositoryUrl>https://github.com/ngoquoctoandev/BlazorChartjs.git</RepositoryUrl>
		<PackageTags>chartjs, blazor, blazor server, blazor webAssembly, wasm, c#, asp.net core</PackageTags>
	</PropertyGroup>
	<ItemGroup>
	  <None Include="..\..\tdev_100.png">
	    <Pack>True</Pack>
	    <PackagePath>\</PackagePath>
	  </None>
	</ItemGroup>


	<ItemGroup>
		<SupportedPlatform Include="browser" />
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="Microsoft.AspNetCore.Components.Web" Version="7.0.11" />
	</ItemGroup>

</Project>